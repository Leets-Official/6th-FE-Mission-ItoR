{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@icons/*": ["src/assets/icons/*"],
      "@ui/*": ["src/components/ui/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"]
}
